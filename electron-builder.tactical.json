{
  "appId": "com.polux.launcher.tactical",
  "productName": "PoluxLauncher Tactical",
  "files": [
    "electron/**/*",
    "package.json",
    "background.png",
    "icon.ico",
    "launcher_cli.py",
    "launcher_core.py"
  ],
  "extraResources": [
    {
      "from": "dist/launcher_cli_backend.exe",
      "to": "backend/launcher_cli_backend.exe"
    }
  ],
  "extraMetadata": {
    "main": "electron/main.tactical.js",
    "name": "polux-launcher-tactical"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "icon": "icon.ico",
    "artifactName": "PoluxLauncher-Tactical-Setup-${version}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
